<Window x:Class="EmployeeSalaryProcessor.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeSalaryProcessor"
        mc:Ignorable="d"
        Title="Добавить сотрудника" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=txtName}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Добавление нового сотрудника" 
                   FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Имя -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:*" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" Height="25"
                 TextChanged="ValidateInputs"/>

        <!-- Фамилия -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:*" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSurname" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Height="25"
                 TextChanged="ValidateInputs"/>

        <!-- Заголовок зарплат -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="Зарплата по месяцам:" 
                   FontWeight="Bold" Margin="0,10,0,5"/>

        <!-- Январь -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Январь:" Margin="0,5,5,2" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
            <TextBox x:Name="txtJanuary" Width="100" Height="25" TextChanged="ValidateInputs"
                     ToolTip="Введите сумму (например: 1500.50 или 2000)"/>
            <TextBlock x:Name="tbJanuaryError" Foreground="Red" Margin="5,0,0,0" VerticalAlignment="Center"
                       Text="" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Февраль -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Февраль:" Margin="0,5,5,2" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            <TextBox x:Name="txtFebruary" Width="100" Height="25" TextChanged="ValidateInputs"
                     ToolTip="Введите сумму (например: 1500.50 или 2000)"/>
            <TextBlock x:Name="tbFebruaryError" Foreground="Red" Margin="5,0,0,0" VerticalAlignment="Center"
                       Text="" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Март -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Март:" Margin="0,5,5,2" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
            <TextBox x:Name="txtMarch" Width="100" Height="25" TextChanged="ValidateInputs"
                     ToolTip="Введите сумму (например: 1500.50 или 2000)"/>
            <TextBlock x:Name="tbMarchError" Foreground="Red" Margin="5,0,0,0" VerticalAlignment="Center"
                       Text="" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Общая информация и ошибки -->
        <Border Grid.Row="7" Grid.ColumnSpan="2" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                BorderThickness="1" Margin="0,15,0,10" Padding="10">
            <StackPanel>
                <TextBlock x:Name="tbTotalInfo" Text="Общая сумма: 0 руб." FontWeight="SemiBold"/>
                <TextBlock x:Name="tbGeneralError" Foreground="Red" Text="" TextWrapping="Wrap" 
                           Margin="0,5,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Click="BtnAdd_Click" Width="90" Height="28" 
                    x:Name="btnAdd" IsEnabled="False" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="BtnCancel_Click" Width="90" Height="28"/>
        </StackPanel>
    </Grid>
</Window>
